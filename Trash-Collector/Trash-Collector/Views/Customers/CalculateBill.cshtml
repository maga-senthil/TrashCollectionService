@model Trash_Collector.Models.Customer

@{
    ViewBag.Title = "CalculateBill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Calculate Bill</h2>

@using (Html.BeginForm("CalculateBill", "Customers"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <h4 class="control-label col-md-2">Month</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bill, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bill, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" />
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
