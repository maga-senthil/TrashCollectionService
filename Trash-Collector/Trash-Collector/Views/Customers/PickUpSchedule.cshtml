@model Trash_Collector.Models.Customer

@{
    ViewBag.Title = "PickUpSchedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("PickUpSchedule", "Customers"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Pickup Schedule</h4><br/>

        <div class="form-group">
            <h5 class="control-label col-md-2">Zip Code</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5 class="control-label col-md-2">Pickup Date</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PickUpDay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PickUpDay, "", new { @class = "text-danger" })
            </div>
        </div>
     
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit"  class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}